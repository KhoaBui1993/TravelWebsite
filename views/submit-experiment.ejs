<html lang="en">
<div class="px-4 py-5 my-5 text-center">
  <h1 class="display-5 fw-bold">Share your experiences </h1>
  <div class="col-lg-6 mx-auto">
    <p class="lead">Share your amazing trips with thousands of people accross the world or simply introduce your city to the world. Fill our form to get started.</p>
  </div>
</div>

<div class="row justify-content-center">

  <% if(infoSubmitObj != '') { %>
    <div class="col-8 alert alert-success" role="alert">
      <%= infoSubmitObj %>
    </div>
  <% } %>

  <% if(infoErrorsObj != '') { %>
    <div class="col-8 alert alert-danger" role="alert">
      <%= infoErrorsObj[0].message %>
    </div>
  <% } %>

  <div class="col-8">

    <form action="/submit-experiment" enctype="multipart/form-data" method="POST">
    
      <div class="row g-3">
        <div class="col-12">
          <label for="Continent">Select Continent</label>
          <select class="form-select form-control" name="Continent" aria-label="Continent">
            <option selected>Select Continent</option>
            <option value="Australia">Australia</option>
            <option value="Asia">Asia</option>
            <option value="Africa">Africa</option>
            <option value="Europe">Europe</option>
            <option value="SouthAmerica">South America</option>
            <option value="NorthAmerica">North America</option>
          </select>
        </div>
        <div class="col-12">
          <label for="country" class="form-label">Country</label>
          <input type="text" name="country" id="country" class="form-control" cols="30" rows="1" required>
        </div>
        <div class="col-12">
          <label for="place" class="form-label">Place</label>
          <input type="text" name="place" id="place" class="form-control" cols="30" rows="1" required>
        </div>
        <div class="col-12">
          <label for="information" class="form-label">Travel Experiences</label>
          <textarea name="information" id="information" class="form-control" cols="30" rows="4"></textarea>
        </div>
        <div class="col-12">
          <label for="Pros" class="form-label">Pros</label>
          <textarea name="Pros" id="Pros" class="form-control" cols="30" rows="2"></textarea>
        </div>
        <div class="col-12">
          <label for="Cons" class="Cons">Cons</label>
          <textarea name="Cons" id="Cons" class="form-control" cols="30" rows="2"></textarea>
        </div>
        <div class="col-12">
          <label for="name" class="form-label">Recommended Activities</label><br>
          <small>Example: Night life</small>
          <div class="thingtodoList">
            <div class="thingtodoDiv mb-1">
              <input type="text" name="thingtodo" class="form-control">
            </div>
          </div>
        </div>

        <div class="col-12">
          <button type="button" class="btn btn-outline-primary" id="addthingtodoBtn">Add more Recommended</button>
        </div>
       
        <div class="col-12">
          <label for="image">Add Photos</label>
          <input type="file" class="form-control" name="image" accept="image/*">
        </div>
    
        <div class="col-12">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>

      </div>
    
    </form>

  </div>
</div>
</html>