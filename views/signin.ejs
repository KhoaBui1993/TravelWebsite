      <form action="/signin" method="post">
      <h2> Sign In </h2>
      <p class="hint-text">Please enter your account and password</p>
          <div class="form-group">
            <input type="email" class="form-control" name="email_input" id="email_input" placeholder="Email" required="required">
          </div>
      <div class="form-group">
              <input type="password" class="form-control" name="password_input" id="password_input" placeholder="Password" required="required">
          </div>     
          <div class="form-group">
      <label class="switch"><input type="checkbox" ><span class="slider round"></span></label> Remember me
      </div>
      <div class="form-group">
              <button type="submit" class="btn btn-primary btn-lg btn-block">Sign In</button>
          </div>
      <div class="form-group">
        <label><a href="#">New member? Sign up for an account</a> </label>
      </div>
      </form> 
  </div>
  
