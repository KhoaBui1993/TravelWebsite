
<!--Body of Homepage-->
<div class="row flex-lg-row-reverse align-items-center g-5 py-4 mb-4">
    <div class="col-12 col-lg-6">
        <img src="\img\northamerica-picture.jpg" width="607" height="510" class="d-block mx-lg-auto img-fluid" loading="lazy" alt="Travel by Group 7">
    </div>

    <div class="col-12 col-lg-6">
        <h1 class="display-5 fw-bold mb-3">Where you can research for the trips</h1>
        <p class="lead">
            Explore the world with easy searching your the place you want to go,  exploring random thousand cities, and save your favorite places for the next Holiday!
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a href="/explorelatest" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Explore Latest</a>
        <form action="/random-place" method="POST">
            <button type="submit" class="btn btn-outline-secondary btn-lg px-4 me-md-2">Suprise Me</button>
        </form>
    </div>

</div>

<!-- Categories Start-->
<div class="row row-cols-2 row-cols-lg-6 g-2 g-lg-3 py-4">

    <% if (categories != ''){%>
        <% categories.forEach(function(category, index) {%>
            <a href="/<%-category.name%> " class="col text-center category__link">
               
                <div class="category__img shadow">
                    <img src="img/<%- category.image %> " alt="<%- category.name %> " loading="lazy">
                </div>
                <div class="pt-1"><%- category.name %></div>
            </a>
            
        <%}) %>
    <%} %>
    
    

    <a href="/categories" class="col text-center category__link">
        <div class="category__img shadow">
            <img src="img/view-all.jfif" alt="View All Categories" loading="lazy">
        </div>
        <div class="pt-1">View All</div>
    </a>

</div>

<!-- Categories end-->

<!--Lates update country Start -->
<section class="pb-4 pt-4">
    <div class="d-flex mb2 align-items-center">
        <h2>Recent Countries Reviews </h2>
        <a href="/categories" class="ms-auto">View More</a>
    </div>
    

    <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3">
        <% if (country != '') { %>
            <%country.latest.forEach(function(country,index){%>
                <a href="/country/<%= country._id %>" class="col text-center category__link">
                    <div class="category__img category__img--large shadow">
                        <img src="/uploads/<%= country.image %> " alt="<%= country.countries %> " Loading="lazy">
                    </div>
                    <div class="pt-1"><%= country.countries %></div>
                </a>
            <%}) %>
        <% } %>
        
    </div>

    

</section>
<!--Latest country End-->

