<% if(countryselect != null ) { %>    
    <div class="row">
      <div class="col-12 col-md-8">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/"><%- countryselect.continent %></a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- countryselect.countries %></li>
          </ol>
        </nav>  
      </div>
      <div class="col-12 col-md-8">
        <div class="row">
          </p> <img src="/uploads/<%- countryselect.image %>" style="top: 300px;" alt="<%- countryselect.name %>" loading="lazy">
          <div class="col-12"><h1><%- countryselect.countries %> - <%- countryselect.place %></h1></div>
          <div class="col-12" style="white-space: pre-line;">
            <h4>Experiment: </h4>
            <%- countryselect.information %>
          </div>
      </div>
      
        <div class="row pt-4">
          <div class="col-12">
            <h4>Pros:</h4>
            <%- countryselect.pros %>
            <h4>Cons:</h4>
            <%- countryselect.cons %>
            <h4>Author:</h4>
            <%- countryselect.author %>
          </div>
        </div>
      </div>
      <div class="col-13 col-md-4" style="padding: 10px 0">
        <div class="myBox">
          <% countryselect.comment.forEach (function(comment) {%>
            <%= comment.User_name_comment %>
            <%= comment.User_comment %>
          <%}) %>
        </div>
        <h4> Please add your comment here: </h4>
        <form  method="POST" action="/do-comment">
          <div>
            <div class="form-group">
              <input class="form-control" type="hidden" name="username" value="<%=user.firstname%>">
              <input class="form-control" type="hidden" name="post_id" value="<%= countryselect._id%>">
              <input class="form-control" type="hidden" name="user_id" value="<%=user._id%>">
            </div>
          <textarea name="comments" id="comments" rows="3" cols="50" >
          </textarea>
          </div>
          <input type="submit" value="Submit">
        </form>
      </div>
    </div>
  </div>
  <% } else { %>
    <p>No item found.</p>
  <% } %>
  
  <style>
    /* Force scrollbars onto browser window */
    body {
    margin-bottom: 200%;
    }
    
    /* Box styles */
    .myBox {
    border: none;
    padding: 5px;
    font: 24px/36px sans-serif;
    width: 480px;
    height: 800px;
    overflow: scroll;
    }
    
    /* Scrollbar styles */
    ::-webkit-scrollbar {
    width: 12px;
    height: 12px;
    }
    
    ::-webkit-scrollbar-track {
    background: #f5f5f5;
    border-radius: 10px;
    }
    
    ::-webkit-scrollbar-thumb {
    border-radius: 10px;
    background: #ccc;  
    }
    
    ::-webkit-scrollbar-thumb:hover {
    background: #999;  
    }
    </style>