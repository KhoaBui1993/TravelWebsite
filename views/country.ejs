<% if(countryselect != null ) { %>    
    <div class="row">
      <div class="col-12 col-md-8">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/"><%- countryselect.continent %></a></li>
            <li class="breadcrumb-item active" aria-current="page"><%- countryselect.countries %></li>
          </ol>
        </nav>  
      </div>
      <div class="col-12 col-md-8">
        <div class="row">
          </p> <img src="/uploads/<%- countryselect.image %>" style="top: 300px;" alt="<%- countryselect.name %>" loading="lazy">
          <div class="col-12"><h1><%- countryselect.countries %> - <%- countryselect.place %></h1></div>
          <div class="col-12" style="white-space: pre-line;">
            <h4>Experiment: </h4>
            <%- countryselect.information %>
          </div>
      </div>
      
        <div class="row pt-4">
          <div class="col-12">
            <h4>Pros:</h4>
            <%- countryselect.pros %>
            <h4>Cons:</h4>
            <%- countryselect.cons %>
            <h4>Author:</h4>
            <%- countryselect.author %>
          </div>
        </div>
      </div>
      <div class="col-13 col-md-4">
        <div class="myBox">
          <% countryselect.comment.forEach (function(comment) {%>
            <section style="background-color: rgb(255, 254, 254);">
              <div class="container my-2 py-2">
                <div class="row d-flex justify-content-center">
                  <div class="">
                    <div class="card">
                      <div class="card-body">
                        <div class="d-flex flex-start align-items-center">
                          <img class="rounded-circle shadow-1-strong me-3"
                            src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="60"
                            height="60" />
                          <div>
                            <h6 class="fw-bold text-primary mb-1"><%- comment.User_name_comment %></h6>
                            <p class="text-muted small mb-0">
                              <%- comment.createAt %>
                            </p>
                          </div>
                        </div>
            
                        <p class="mt-3 mb-4 pb-2">
                          <%- comment.User_comment %>
                        </p>
            
                        <div class="small d-flex justify-content-start">
                          <a href="#!" class="d-flex align-items-center me-3">
                            <i class="far fa-thumbs-up me-2"></i>
                            <p class="mb-0">Like</p>
                          </a>
                          <a href="#!" class="d-flex align-items-center me-3">
                            <i class="far fa-comment-dots me-2"></i>
                            <p class="mb-0">Comment</p>
                          </a>
                            <a class="d-flex align-items-center me-3">
                              <i class="far fa-delete-left me-2"></i>
                              <form method="post" action="some_page" class="inline">
                                <button type="submit" name="submit_param" value="submit_value" class="link-button">
                                  Delete
                                </button>
                              </form>
                            </a>
                          </form>
                       
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
            
          <%}) %>
        </div>
        <h4> Please add your comment here: </h4>
        <form  method="POST" action="/do-comment">
          <div>
            <div class="form-group">
              <input class="form-control" type="hidden" name="username" value="<%=user.firstname%>">
              <input class="form-control" type="hidden" name="post_id" value="<%= countryselect._id%>">
              <input class="form-control" type="hidden" name="user_id" value="<%=user._id%>">
            </div>
          <textarea name="comments" id="comments" rows="3" cols="50" >
          </textarea>
          </div>
          <input type="submit" value="Submit">
        </form>
      </div>
    </div>
  </div>
  <% } else { %>
    <p>No item found.</p>
  <% } %>
  
