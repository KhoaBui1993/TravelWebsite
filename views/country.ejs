<nav aria-label="breadcrumb">
<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="/">Home</a></li>
  <li class="breadcrumb-item"><a href="/<%- countryselect.continent %>"><%- countryselect.continent %></a></li>
  <li class="breadcrumb-item active" aria-current="page"><%- countryselect.countries %></li>
</ol>
</nav>  
<div class="album py-0 bg-light">
    <div class="container">
    <% if(countryselect != null ) { %>    
    <div class="row">
      
      <div class="col-12 col-md-8">
        <div class="row">
          </p> <img src="/uploads/<%- countryselect.image %>" style="top: 300px;" alt="<%- countryselect.name %>" loading="lazy">
          <div class="col-12" style="white-space: pre-wrap;" >
            <h2><%- countryselect.countries %> - <%- countryselect.place %></h2>
            <h4>Experiment: </h4>
            <%- countryselect.information %>
            <h4>Pros:</h4>
            <%- countryselect.pros %>
            <h4>Cons:</h4>
            <%- countryselect.cons %>
            <h4>Author:</h4>
            <%- countryselect.author %>
          </div>
      </div>
      </div>
      <div class="col-13 col-md-4">
        <div class="myBox">
          <% countryselect.comment.forEach (function(comment) {%>
            <section style="background-color: rgb(255, 254, 254);">
              <div class="container my-2 py-2">
                <div class="row d-flex justify-content-center">
                  <div class="">
                    <div class="card">
                      <div class="card-body">
                        <div class="d-flex flex-start align-items-center">
                          <img class="rounded-circle shadow-1-strong me-3"
                            src="/User_picture_profile/<%=comment.User_picture_comment%>" alt="avatar" width="80"
                            height="80" />
                          <div>
                            <h6 class="fw-bold text-primary mb-1"><%- comment.User_name_comment %></h6>
                            <p class="text-muted small mb-0">
                              <%- comment.createAt %>
                            </p>
                          </div>
                        </div>
            
                        <p class="mt-3 mb-4 pb-2">
                          <%- comment.User_comment %>
                        </p>
            
                        <div class="small d-flex justify-content-start">
                          <a href="#!" class="d-flex align-items-center me-3">
                            <i class="far fa-thumbs-up me-2"></i>
                            <p class="mb-0">Like</p>
                          </a>
                          <a href="#!" class="d-flex align-items-center me-3">
                            <i class="far fa-comment-dots me-2"></i>
                            <p class="mb-0">Comment</p>
                          </a>
                          <a class="d-flex align-items-center me-3">
                            <% if(user._id == comment.User_id_comment ) { %>
                            <form method="post" action="/delete-comment/<%= comment._id%>" class="inline">
                              <input class="form-control" type="hidden" name="username" value="<%=user.firstname%>">
                              <input class="form-control" type="hidden" name="post_id" value="<%= countryselect._id%>">
                              <input class="form-control" type="hidden" name="user_id" value="<%=user._id%>">
                              <input class="form-control" type="hidden" name="comment_id" value="<%=comment._id%>">
                              <button type="submit" class="btn btn-link">
                                Delete
                              </button>
                            </form>
                            <% }else { %>
                              <% } %>
                          </a>
                          </form>
                       
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </section>
            
          <%}) %>
        </div>
        <% if(user != null ) { %>
        <h4> Please add your comment here: </h4>
        <form  method="POST" action="/do-comment">
          <div>
           
            <div class="form-group">
              <input class="form-control" type="hidden" name="username" value="<%=user.firstname%>">
              <input class="form-control" type="hidden" name="post_id" value="<%= countryselect._id%>">
              <input class="form-control" type="hidden" name="user_id" value="<%=user._id%>">
              <input class="form-control" type="hidden" name="user_picture_comment" value="<%=user.picture%>">
            </div>
            <textarea name="comments" id="comments" rows="3" cols="45" >
              </textarea>
          </div>
          <input type="submit" value="Submit">
          <% } else { %>
            <a href="/signin" class="fw-bolder text-primary mb-1"  >Please Login to comment!</a>
            <% } %>
        </form>
      </div>
    </div>
  </div>
  <% } else { %>
    <p>No item found.</p>
  <% } %>
</div>
